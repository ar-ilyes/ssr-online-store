<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="<%if(editing==false){%>/admin/add-product<%}else{%> /admin/edit-product <%}%>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%if(editing==true){%> <%=product.title%> <%}%>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<%if(editing==true){%> <%=product.imageUrl%> <%}%>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" <%if(editing==true){%> value="<%=product.price%>" <%}%>>
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5" ><%if(editing==true){%> <%=product.description%> <%}%></textarea>
            </div>
            <%if(editing==true){%><input type="hidden" name="id" id="id" value="<%=product.id%>" ><%}%>

            <button class="btn" type="submit"><%if(editing==false){%>Add Product<%}else{%>Edit product<%}%></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>